// Copy this snippet into the Visual Studio Code settings.json to fully compile the thesis with glossary
{
    "latex-workshop.latex.recipes": [
        {
          "name": "Fully compile with glossary",
          "tools": [
            "pdflatex",
            "bibtex",
            "makeglossaries",
            "pdflatex",
            "pdflatex"
          ]
        }
      ],
      "latex-workshop.latex.tools": [
        {
          "name": "pdflatex",
          "command": "pdflatex",
          "args": [
            "-synctex=1",
            "-interaction=nonstopmode",
            "-undump=pdflatex",
            "%DOCFILE%"
          ]
        },
        {
          "name": "bibtex",
          "command": "bibtex",
          "args": [
            "%DOCFILE%"
          ],
          "env": {}
        },
        {
          "name": "makeglossaries",
          "command": "makeglossaries",
          "args": [
            "%DOCFILE%"
          ]
        }
      ]
}
